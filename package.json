{
  "name": "exy",
  "version": "1.0.2",
  "description": "Discord rich presence client for Emby/Jellyfin.",
  "main": "./out/main/index.js",
  "author": "xyxxyxxy",
  "homepage": "https://github.com/xyxxyxxy/exy",
  "engines": {
    "node": ">=20.17.0"
  },
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "generate-emby-client": "openapi-ts --input https://swagger.emby.media/openapi.json --output ./src/main/core/emby-client --name EmbyClient --client axios"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@hey-api/openapi-ts": "^0.52.11",
    "@picocss/pico": "^2.0.6",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/discord-rpc": "^4.0.8",
    "@types/node": "^22.5.1",
    "axios": "^1.7.5",
    "bufferutil": "^4.0.8",
    "discord-rpc": "^4.0.1",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "electron-context-menu": "^4.0.4",
    "electron-log": "^5.1.7",
    "electron-store": "^8.2.0",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.43.0",
    "imgur": "^2.4.2",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "rxjs": "^7.8.1",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "typescript": "^5.5.4",
    "utf-8-validate": "^5.0.10",
    "vite": "^5.4.2"
  }
}
